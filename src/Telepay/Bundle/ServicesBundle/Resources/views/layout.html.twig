<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <link href="{{ asset('bundles/telepayservices/stylesheets/bootstrap.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/telepayservices/stylesheets/pixel-admin.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/telepayservices/stylesheets/pages.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/telepayservices/stylesheets/rtl.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/telepayservices/stylesheets/themes.css') }}" rel="stylesheet" type="text/css">
    <script src="{{ asset('bundles/telepayservices/javascripts/ie.js') }}"></script>
</head>

<body class="theme-default page-signin">
<div class="form-group w-icon">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
        <a href="{{ path('fos_user_security_logout') }}"> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
    {% else %}
        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
    {% endif %}
</div>

{% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="flash-{{ type }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<div>
    {% block fos_user_content %}
    {% endblock fos_user_content %}
</div>
</body>
</html>
