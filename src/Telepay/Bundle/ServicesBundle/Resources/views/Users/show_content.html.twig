{% extends "TelepayServicesBundle::base.html.twig" %}

{% block section %}
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title"></span>
        </div>
        <div class="panel-body">
            <div class="table-primary">
                <div id="jq-datatables-example_wrapper" class="dataTables_wrapper form-inline no-footer" role="grid">
                    <div class="table-header clearfix">
                        <div class="table-caption">Users Panel</div>
                        <div class="DT-lf-right">
                            <div class="DT-per-page">
                                <div id="jq-datatables-example_length" class="dataTables_length">
                                    <label>
                                        Per page:
                                        <select class="form-control input-sm" name="jq-datatables-example_length" aria-controls="jq-datatables-example">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </label>
                                </div>
                            </div>
                            <div class="DT-search">
                                <div id="jq-datatables-example_filter" class="dataTables_filter">
                                    <label>
                                        <input class="form-control input-sm" type="search" aria-controls="jq-datatables-example" placeholder="Search...">
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table id="jq-datatables-example" class="table table-striped table-bordered dataTable no-footer" border="0" cellspacing="0" cellpadding="0" aria-describedby="jq-datatables-example_info">
                        <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="jq-datatables-example" rowspan="1" colspan="1" style="width: 167px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending">ID</th>
                            <th class="sorting" tabindex="0" aria-controls="jq-datatables-example" rowspan="1" colspan="1" style="width: 254px;" aria-label="Browser: activate to sort column ascending">Name</th>
                            <th class="sorting" tabindex="0" aria-controls="jq-datatables-example" rowspan="1" colspan="1" style="width: 223px;" aria-label="Platform(s): activate to sort column ascending">E-mail</th>
                            <th class="sorting" tabindex="0" aria-controls="jq-datatables-example" rowspan="1" colspan="1" style="width: 99px;" aria-label="CSS grade: activate to sort column ascending">Options</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                        <tr class="gradeA odd">
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                        </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="table-footer clearfix">
                        <div class="DT-label">
                            <div id="jq-datatables-example_info" class="dataTables_info" role="alert" aria-live="polite" aria-relevant="all">Showing 1 to 10 of 57 entries</div>
                        </div>
                        <div class="DT-pagination">
                            <div id="jq-datatables-example_paginate" class="dataTables_paginate paging_simple_numbers">
                                <ul class="pagination">
                                    <li id="jq-datatables-example_previous" class="paginate_button previous disabled" aria-controls="jq-datatables-example" tabindex="0">
                                        <a href="#">Previous</a>
                                    </li>
                                    <li class="paginate_button active" aria-controls="jq-datatables-example" tabindex="0">
                                        <a href="#">1</a>
                                    </li>
                                    <li class="paginate_button " aria-controls="jq-datatables-example" tabindex="0">
                                        <a href="#">2</a>
                                    </li>
                                    <li class="paginate_button " aria-controls="jq-datatables-example" tabindex="0">
                                        <a href="#">3</a>
                                    </li>
                                    <li id="jq-datatables-example_next" class="paginate_button next" aria-controls="jq-datatables-example" tabindex="0">
                                        <a href="#">Next</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}