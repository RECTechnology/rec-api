{% block show_account %}
    <strong>{{ "Name" | trans }}:</strong> <em>{{ account.name }}</em><br />
    <strong>{{ "Phone" | trans }}:</strong> <em>+{{ account.prefix }} {{ account.phone }}</em><br />
    <strong>{{ "Email" | trans }}:</strong> <em>{{ account.email }}</em><br />
    {% if account.neighbourhood %}
        <strong>{{ "Neighbourhood" | trans }}:</strong> <em>{{ account.neighbourhood.name }}</em><br />
    {% endif %}
    {{ account.street }} {{ account.addressNumber }} {{ account.country }} {{ account.city }} {{ account.zip }}
{% endblock %}