{% block show_account %}
    <strong>{{ "Name" | trans }}:</strong>
    <em>{{ account.name }}</em><br/>
    <strong>{{ "Phone" | trans }}:</strong>
    <em>+{{ account.prefix }}
        {{ account.phone }}</em><br/>
    {% if account.email %}
        <strong>{{ "Email" | trans }}:</strong>
        <em>{{ account.email }}</em><br/>
    {% endif %}
    {% if (account.street != null) and (account.addressNumber != null) %}
        <strong>{{ "Address" | trans }}:</strong>
        <em>
            {{ account.streetType | capitalize }}
            {{ account.street | capitalize}}
            {{ account.addressNumber }},
            {{ account.city | capitalize}}
            {{ account.zip }}
            {% if account.neighbourhood %}
                ({{ account.neighbourhood.name }})
            {% endif %}
        </em>
    {% endif %}
{% endblock %}
